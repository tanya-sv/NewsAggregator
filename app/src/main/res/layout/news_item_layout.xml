<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/news_item_image"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/news_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/news_item_image"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="Name Surname" />

        <TextView
            android:id="@+id/news_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_author"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/news_item_image"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="28.05.2017 7:54" />

        <TextView
            android:id="@+id/news_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_item_date"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/news_item_image"
            android:textSize="16sp"
            tools:text="British Airways to resume most flights but delays still expected" />

    </RelativeLayout>

</android.support.v7.widget.CardView>